type Mutation {
  addToCart(userId: ID!, itemId: ID!, quantity: Int!): Cart
  removeFromCart(userId: ID!, itemId: ID!): Cart
  resetCartTimer(userId: ID!): Cart
}

type Query {
  cartTimer(userId: ID!): Timer
}

type Cart {
  items: [CartItem!]
  timer: Timer!
}

type CartItem {
  itemId: ID!
  quantity: Int!
}

type Timer {
  timeLeft: Int!
}